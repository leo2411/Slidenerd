<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgorund"
    >


    <TextView
        android:text="facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fbtextview"
        android:gravity="center"
        android:textColor="@color/fbtext"
        android:textSize="38dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbtextview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="37dp"
        android:textSize="16dp"
        android:textColor="@color/fbtext"
        android:id="@+id/email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="30"
        android:padding="5dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:id="@+id/emailedittext"
        android:layout_marginRight="10dp"
        android:background="@color/fbtext"

        />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailedittext"
        android:layout_alignLeft="@+id/emailedittext"
        android:layout_alignStart="@+id/emailedittext"
        android:layout_marginTop="14dp"
        android:id="@+id/password"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/fbtext"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="30"
        android:padding="5dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:id="@+id/passwordedittext"
        android:layout_marginRight="10dp"
        android:background="@color/fbtext" />

    <CheckBox
        android:text="Save Login"
        android:textColor="@color/fbtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordedittext"
        android:layout_alignLeft="@+id/passwordedittext"
        android:layout_alignStart="@+id/passwordedittext"
        android:layout_marginTop="17dp"
        android:id="@+id/checkBox"

        />

    <TextView
        android:text="Need an account?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fbtext"
        android:layout_marginBottom="73dp"
        android:id="@+id/question" />

    <TextView
        android:text="@string/singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/question"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fbtext"
        android:layout_marginTop="16dp"
        android:id="@+id/singup"
        android:textColorLink="@color/edittext"/>

    <TextView
        android:text="by Leo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbtextview"
        android:layout_marginTop="-10dp"
        android:gravity="center"

        android:id="@+id/textView"
        android:textSize="16dp"
        android:textColor="@color/fbtext"
        android:textStyle="italic"/>

    <Button
        android:text="Confrim"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:id="@+id/button"
        android:background="@color/fbtext"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_alignRight="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox" />


</RelativeLayout>
